@model List<ProductModel>
<!DOCTYPE html>
<html lang="fr-be">
    <head>
        <meta charset="utf-8" />
        <title>Exercice Product : Liste des produits</title>
    </head>
    <body>
        <h1>Ma liste de produits</h1>
        @* <a href="/Product/Add">Ajouter un produit</a> *@
        @Html.ActionLink("Ajouter un produit","Add","Product")
        @if(Model.Count > 0)
        {
            <ul>
                @foreach (ProductModel product in Model)
                {
                    <li>@product.Barcode : @product.Name @product.BuyingPrice € @((product.SalePrice is not null)? product.SalePrice + " €" : "")</li>
                }
            </ul>
        }
        else
        {
            <p>Aucun produit actuellement en stock...</p>
        }
    </body>
</html>