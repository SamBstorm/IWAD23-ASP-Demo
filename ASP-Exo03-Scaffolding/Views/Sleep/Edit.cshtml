@model ASP_Exo03_Scaffolding.Models.SleepEditForm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SleepEditForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* <label asp-for="Id" class="control-label"></label> <!-Pas de label pour un Id caché->*@
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HaveDreamed" /> @Html.DisplayNameFor(model => model.HaveDreamed)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNightmare" /> @Html.DisplayNameFor(model => model.IsNightmare)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DreamDescription" class="control-label"></label>
                <textarea asp-for="DreamDescription" class="form-control"></textarea>
                <span asp-validation-for="DreamDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
